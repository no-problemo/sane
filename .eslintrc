{
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    "no-underscore-dangle": 0,
    "no-multi-spaces": 0,
    "key-spacing": 0,
    "consistent-return": 1,
    "no-shadow": 0,
    "comma-dangle": [1, "always"],
    "no-use-before-define": 2,
    "new-parens": 1,
    "no-cond-assign": 1,
    "no-multiple-empty-lines": [1, {"max": 2}],
    "quotes": [1, "single"],
    "eqeqeq": [2, "smart"],
    "wrap-iife": [2, "outside"],
    "indent": [2, 2],
    "brace-style": [2, "1tbs"],
    "space-after-keywords": 2,
    "space-before-function-parentheses": [2, {
      "anonymous": "always",
      "named": "never"
    }],
    "space-infix-ops": 2,
    "spaced-line-comment": [1, "always", {"exceptions":["-","+"]}]
  },
  "env": {
    "node": true,
    "es6": true
  }
}
